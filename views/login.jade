extends layout
block head
	title #{title}
	link(rel="stylesheet", href="css/login.css")
block content
	.login
		form#form(method="post")
			.username
				input(type="text" name="username" placeholder="用户名" required autocomplate="off")
			.password
				input(type="password" name="password" placeholder="请输入密码" required autocomplate="off")
			.just-login
				input(type="submit" id="login" value="登录")
				a.register 注册
			.just-register.hidden
				input(type="submit" id="register" value="注册")
				a.sigin 登陆
block footer
	script.
		require(['js/login.js'],function(){})

