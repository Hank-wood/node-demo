extends layout
block head
	title #{title}
	link(rel="stylesheet", href="css/car.css")
block content
	.car-nav-title
		.car-content
			.car-list
				h3.name #{info.name}
				a(href="search_car?_id=#{info._id}")
					.img
						img(src="images/car/benci-c.jpg", alt="")
				.price
					指导价：
					a #{info.price}万
	.comments
		.add-comments
			- var attributes = {'data-id': info._id}
			textarea#comments-content(name="", cols="100", rows="10")&attributes(attributes)
			button#add-comments(disabled="true") 添加评论
		.comments-list
			.list
				.list-head
					span 2015-11-02 08:12:24
					span.delete 删除
				p 评论内容
block footer
	script.
		require(['js/car/info.js'],function(){})

