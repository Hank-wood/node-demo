extends layout
block head
	title #{title}
	link(rel="stylesheet", href="css/car.css")
block content
	.car-nav-title
		.car-content
			.car-list
				h3.name #{info.name}
	//- 			a(href="search_car?_id=#{info._id}")
	//- 				.img
	//- 					img(src="images/car/benci-c.jpg", alt="")
	//- 			.price
	//- 				指导价：
	//- 				a #{info.price}万
	.comments
		.add-comments
			- var attributes = {'data-id': String(info._id)}
			textarea#comments-content&attributes(attributes)
			div
				span#tips.hidden
				button.btn#add-comments(disabled="true") 添加评论
		.comments-list
			each comment in comments
				.list
					.list-head
						span.date #{comment.date}
						span.fr.pointer.delete 删除
					p #{comment.comments}
block footer
	script.
		require(['js/car/info.js'],function(){})

